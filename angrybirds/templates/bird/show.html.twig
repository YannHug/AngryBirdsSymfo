{% extends 'base.html.twig' %}

{% block body %}
	<main class="container main-content">

		<div class="jumbotron mt-3 bird-detail">
			<h1 class="display-4">{{bird.name}}</h1>

			<div class="row">
				<div class="col-3">
					<img class="bird-card__image" src="{{asset('images/' ~ bird.image)}}" width="50%">
				</div>
				<div class="col-9">
					<p class="lead">
						{{bird.description}}
					</p>
					<form action="{{ path('cart_add') }}" method="post">
						<input type="hidden" name="index" value="{{ index }}">
						<button class="btn btn-success">Add to cart</button>
					</form>
				</div>

				<hr class="my-4">
				<p class="lead">
					<a class="btn btn-primary btn-lg" href="{{path('bird_list')}}" role="button">Back to list</a>
				</p>
			</div>

		</main>
	{% endblock %}
